<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.csu.productservice.mapper.ReviewMapper">
    <insert id="insertReview" parameterType="Review">
        INSERT INTO review (userid,itemid,score,comment) VALUES (#{userid},#{itemid},#{score},#{comment})
    </insert>

    <select id="getAllReviews" resultType="Review">
        SELECT r.*,a.username,i.name
        FROM review r
        JOIN account a ON r.userid=a.userid
        JOIN item i ON r.itemid=i.itemid
    </select>

    <select id="getReviewsByItem" parameterType="String" resultType="Review">
        SELECT * FROM review WHERE itemid = #{itemid}
    </select>

    <select id="getReviewsByUser" parameterType="Long" resultType="Review">
        SELECT * FROM review WHERE userid = #{userid}
    </select>
</mapper>